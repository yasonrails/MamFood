<div class="container">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    Breakfast
  </div>
  <h1>Plats Ã  emporter</h1>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-6 col-md-4">
        <div class="card">
          <%= image_tag product.photo_url , class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
            <p>Prix: <%= humanized_money_with_symbol(product.price) %></p>
            <%= link_to "More details", product_path(product), class: "btn btn-primary" %>
            <%= image_tag "logo.png", width: '50%' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

